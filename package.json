{
  "name": "graphql-operation-statistics",
  "version": "1.0.0",
  "license": "MIT",
  "author": "tz",
  "main": "dist/index.js",
  "module": "dist/graphql-depth-limit.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerzey/graphql-operation-statistics.git"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "tsdx test --watch startAbsolutelyNothingAtLaunch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "4.9.1",
    "graphql": "15.4.0",
    "husky": "4.3.8",
    "size-limit": "4.12.0",
    "tsdx": "0.14.1",
    "tslib": "2.0.3",
    "typescript": "4.1.3"
  },
  "peerDependencies": {
    "graphql": "^15.0.0"
  },
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/graphql-depth-limit.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/graphql-depth-limit.esm.js",
      "limit": "10 KB"
    }
  ]
}
